<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>io.axoniq.platform</groupId>
        <artifactId>axoniq-platform-parent</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>axoniq-platform-spring-boot-starter</artifactId>
    <name>AxonIQ Platform client: Spring Boot Starter</name>
    <description>Spring Boot Starter to auto-connect Axon Framework 5+ applications with Axoniq Platform</description>

    <dependencies>
        <dependency>
            <groupId>io.axoniq.platform</groupId>
            <artifactId>axoniq-platform-client-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.axonframework</groupId>
            <artifactId>axon-messaging</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.axonframework</groupId>
            <artifactId>axon-common</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.axoniq.platform</groupId>
            <artifactId>axoniq-platform-client-all</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-configuration-processor</artifactId>
            <optional>true</optional>
        </dependency>
    </dependencies>
</project>
